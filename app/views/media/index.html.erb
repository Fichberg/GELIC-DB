<h1>Media</h1>

<table>
  <tbody>
    <% unless @media.empty? %>

    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Duration</th>
        <th>Recording Date</th>
        <th>Submission Date</th>
        <th>Collector's Email</th>
        <th>Submitter Admin's Email</th>
        <th>Languages</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

      <% @media.each do |medium| %>
        <tr>
          <td><%= medium.nome %></td>
          <td><%= medium.tipo %></td>
          <td><%= medium.duracao %></td>
          <td><%= medium.data_gravacao %></td>
          <td><%= medium.data_submissao %></td>
          <td><%= medium.email_coletor %></td>
          <td><%= medium.email_admin %></td>
          <td><% @idioms.each do |idiom| %>
            <li><%= idiom.idioma if idiom.id_midia = medium.id %></li>
          <% end %></td>
          <td><%= link_to 'Show', medium %></td>
          <% if @current_user.is_super %>
            <td><%= link_to 'Add Idiom', new_idiom_path(medium.id) %></td>
          <% end %>
          <% if @current_user.is_admin %>
            <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
            <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% else %>
      No media found
    <% end %>
  </tbody>
</table>

<br>

<% if @current_user.is_super %>
  <%= link_to 'New Medium', new_medium_path %>
<% end %>
