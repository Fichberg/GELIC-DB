<%= form_for(@medium) do |f| %>
  <% if @medium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
      <% @medium.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Type" %><br>
    <%= f.text_field :tipo %>
  </div>
  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label "Duration" %><br>
    <%= f.text_field :duracao %>
  </div>
  <div class="field">
    <%= f.label "Collector's Email" %><br>
    <%= f.text_field :email_coletor %>
  </div>
  <div class="field">
    <%= f.label "Recording Date" %><br>
    <%= f.datetime_select :data_gravacao %>
  </div>
  <div class="field">
    <%= f.label "City" %><br>
    <%= f.select(:id_cidade, City.all.map { |city| [city.nome + ' - ' + city.nome_pais, city.id] })%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
