<h1>Cities</h1>

<table>
  <% unless @cities.empty? %>
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Country</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.nome %></td>
          <td><%= city.state.nome if city.state.present?%></td>
          <td><%= city.country.nome %></td>
          <td><%= link_to 'Show', city %></td>
          <% if @current_user.is_admin %>
            <td><%= link_to 'Edit', edit_city_path(city) %></td>
            <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    No city found
  <% end %>
</table>

<br>

<% if @current_user.is_super %>
  <%= link_to 'New City', new_city_path %>
<% end %>
